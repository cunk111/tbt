{
  "name": "back",
  "version": "0.0.0",
  "scripts": {
    "build": "npx ts-node build.ts",
    "lint": "npx eslint --ext .ts app/",
    "lint-fix": "npx eslint --fix --ext .ts app/",
    "start": "NODE_ENV=production node -r module-alias/register ./dist",
    "dev": "NODE_ENV=development nodemon",
    "test": "nodemon --config ./spec/nodemon.json",
    "db:up": "docker compose -f docker-compose.yml up",
    "db:down": "docker compose -f docker-compose.yml down"
  },
  "nodemonConfig": {
    "watch": [
      "app"
    ],
    "ext": "ts, html",
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./app"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^5.0.1",
    "helmet": "^7.0.0",
    "jet-logger": "^1.3.1",
    "joi": "^17.10.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jsonfile": "^6.1.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-node": "^11.1.0",
    "fs-extra": "^11.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
